<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.jackandphantom.carouselrecyclerview.view.ReflectionViewContainer
        android:id="@+id/reflectionViewContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="42dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="42dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/style_card_following_shape"
            android:padding="1dp" />


    </com.jackandphantom.carouselrecyclerview.view.ReflectionViewContainer>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_launcher_background"
        app:civ_border_color="@color/white"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/reflectionViewContainer"
        app:layout_constraintEnd_toEndOf="@+id/reflectionViewContainer"
        app:layout_constraintStart_toStartOf="@+id/reflectionViewContainer"
        app:layout_constraintTop_toTopOf="@+id/reflectionViewContainer" />

    <TextView
        android:id="@+id/textViewUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/profile_image"
        app:layout_constraintStart_toStartOf="@+id/profile_image"
        app:layout_constraintTop_toBottomOf="@+id/profile_image" />

    <TextView
        android:id="@+id/textViewFollowProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        android:paddingStart="30dp"
        android:paddingTop="3dp"
        android:paddingEnd="30dp"
        android:paddingBottom="3dp"
        android:text="@string/follow"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/reflectionViewContainer"
        app:layout_constraintStart_toStartOf="@+id/reflectionViewContainer"
        app:layout_constraintTop_toBottomOf="@+id/textViewUserName" />


</androidx.constraintlayout.widget.ConstraintLayout>